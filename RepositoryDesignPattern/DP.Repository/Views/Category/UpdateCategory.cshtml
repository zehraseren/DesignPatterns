@model Category
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <form method="post">
        <input type="hidden" asp-for="CategoryID" />
        <label>Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
        <br />
        <button class="btn btn-outline-success">Kategoriyi Güncelle</button>
        <a href="/Category/Index/" class="btn btn-outline-danger">Vazgeç</a>
    </form>
</div>